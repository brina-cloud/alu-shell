#!/usr/bin/env bash
# create  /var/run/myscript.pid with its PID and trap sugnal like SIGTERM and SIGINT and delete from SIGQUIT

touch /var/run/myscript.pid 
echo "$$" >>  /var/run/myscript.pid 

trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'rm -f /var/run/myscript.pid' SIGQUIT 

while true; do
 echo "To infinity and beyond"
 sleep 2;
done

